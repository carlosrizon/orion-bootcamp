{
  "name": "orion-api",
  "version": "1.0.0",
  "description": "Boilerplate para as APIs do Orion Bootcamp",
  "author": "",
  "license": "ISC",
  "scripts": {
    "prettier": "npx prettier --write .",
    "start:dev": "npx nodemon -L",
    "build": "npm run lint && npx tsc",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typedoc": "npx typedoc --entryPointStrategy expand ./src",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/config/database.ts migration:generate ./src/migrations/default",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/config/database.ts migration:run",
    "migration:create": "typeorm-ts-node-commonjs migration:create ./src/migrations/createTestStory",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/config/database.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d ./src/config/database.ts",
    "bannedwords:copy": "docker cp src/validator/bannedWords.txt orion-api:/app/src/validator/bannedWords.txt",
    "docs": "typedoc"
  },
  "devDependencies": {
    "@types/cors": "2.8.14",
    "@types/express": "4.17.19",
    "@types/node": "20.8.6",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/swagger-ui-express": "4.1.4",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "nodemon": "3.0.1",
    "ts-node": "10.9.1",
    "typedoc": "0.25.3",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@google-cloud/translate": "8.0.2",
    "@types/express-validator": "3.0.0",
    "@types/node-cron": "3.0.11",
    "axios": "1.6.0",
    "bcrypt": "5.1.1",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-validator": "7.0.1",
    "jsonwebtoken": "9.0.2",
    "md5": "2.3.0",
    "moment": "2.29.4",
    "mysql2": "3.6.2",
    "node-cron": "3.0.2",
    "nodemailer": "6.9.6",
    "reflect-metadata": "0.1.13",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.0",
    "typeorm": "0.3.17"
  }
}
